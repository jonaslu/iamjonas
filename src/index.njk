---
layout: base.njk
---

<div class="section">
  {%- for post in collections.posts -%}
    <h1>
        <a href='{{ post.url }}'>
            {{ post.data.title }}
        </a>
    </h1>
    <p>
        {{ post.data.summary }}
    </p>
    <span class='timestamp'>
        {{ post.data.date | intlPostDate }}
    </span>
    <div class='scissorstable'>
        <span class='beforescissors'></span>
        <span class='fa fa-cut'></span>
        <span class='afterscissors'></span>
    </div>
  {%- endfor -%}
</div>
